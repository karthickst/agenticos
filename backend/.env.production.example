# Backend Production Environment Variables
# Copy this file to .env.production and fill in your values

# Vercel Postgres Connection String
# Get this from Vercel Dashboard -> Storage -> Postgres -> .env.local tab
DATABASE_URL=postgres://default:xxx@xxx-pooler.us-east-1.postgres.vercel-storage.com:5432/verceldb?sslmode=require

# JWT Secret - MUST be a secure random string (min 32 characters)
# Generate with: openssl rand -hex 32
JWT_SECRET=your-secure-jwt-secret-min-32-characters-change-this

# Anthropic API Key for Claude
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Logging Level
RUST_LOG=info,goagenticos_backend=debug

# Server Port
PORT=3001

# Production CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-custom-domain.com
